<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.project.filter.CharsetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.project.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.project.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrawlServlet</servlet-name>
        <servlet-class>com.project.servlet.CrawlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchWordServlet</servlet-name>
        <servlet-class>com.project.servlet.SearchWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrawlJishoServlet</servlet-name>
        <servlet-class>com.project.servlet.CrawlCarefulServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrawlAllServlet</servlet-name>
        <servlet-class>com.project.servlet.CrawlAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrawlOneWordServlet</servlet-name>
        <servlet-class>com.project.servlet.CrawlOneWordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/DispatcherServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrawlServlet</servlet-name>
        <url-pattern>/CrawlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchWordServlet</servlet-name>
        <url-pattern>/SearchWordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrawlJishoServlet</servlet-name>
        <url-pattern>/CrawlCarefulServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrawlAllServlet</servlet-name>
        <url-pattern>/CrawlAllServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrawlOneWordServlet</servlet-name>
        <url-pattern>/CrawlOneWordServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            DispatcherServlet
        </welcome-file>
    </welcome-file-list>
</web-app>
